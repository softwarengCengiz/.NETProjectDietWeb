@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-4" id="forPhoto">
    <section class="page-section" id="IdealCalcSection">
        <div class="container">
            <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="selectSex">
                <option selected disabled>Cinsiyet</option>
                <option value="1">Erkek</option>
                <option value="2">Kadın</option>
            </select>

            <input class="form-control form-control-sm" type="text" placeholder="Yaş" aria-label=".form-control-sm example" id="Age">

            <input class="form-control form-control-sm" type="text" placeholder="Boy" aria-label=".form-control-sm example" id="Height">

            <input class="form-control" type="text" placeholder="" id="secretText" aria-label="Disabled input example" disabled>

            <button type="button" class="btn btn-danger" id="Calc">Hesapla</button>
        </div>
    </section>
</div>



<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script>
    $(document).ready(function () {
        $('#secretText').hide();
    });

    $('#Calc').on('click', function () {
        calc();
    });

    function calc() {

        var sex = $('#selectSex').val();
        var age = Number($('#Age').val());
        var height = Number($('#Height').val());
        var ideal = (height + age);

        if (sex == 1) {
            $('#secretText').attr('placeholder', ideal);
            $('#secretText').show();
        }

        else if (sex == 2) {
            $('#secretText').attr('placeholder', ideal * 100);
            $('#secretText').show();
        }
    }


    $('#selectSex').change(function () {
        $('#Age').val('');
        $('#Height').val('');
        $('#secretText').hide();
    });

</script>

<link href="~/Content/css/styles.css" rel="stylesheet" />
